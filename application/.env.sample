# 공통 설정
NODE_ENV=production
TZ=Asia/Seoul

# Next.js 설정
NEXT_PORT=3000
NEXT_APP_NAME=nextjs-demo
NEXT_PUBLIC_API_URL=https://nest-demo.local/api

# Nest.js 설정
NEST_PORT=3001
NEST_APP_NAME=nestjs-demo
NEST_DATABASE_URL=postgresql://user:password@localhost:5432/nestdb
NEST_JWT_SECRET=your-secure-jwt-secret-key

# Python 설정
PYTHON_PORT=8000
PYTHON_APP_NAME=python-demo
PYTHON_DEBUG=0
PYTHON_DATABASE_URL=postgresql://user:password@localhost:5432/pythondb
PYTHON_SECRET_KEY=your-secure-secret-key

# 로깅 설정
LOG_LEVEL=info
LOG_FORMAT=json

# 데이터베이스 공통 설정
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
