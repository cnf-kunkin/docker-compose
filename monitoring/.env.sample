# Nginx 설정
NGINX_LOG_MAX_SIZE=10m
NGINX_LOG_MAX_FILES=3

# Grafana 기본 설정
GF_SECURITY_ADMIN_PASSWORD=change_me_in_production
GF_SERVER_ROOT_URL=https://grafana.local
GF_USERS_ALLOW_SIGN_UP=false

# Grafana 보안 설정
GF_AUTH_DISABLE_LOGIN_FORM=false
GF_AUTH_ANONYMOUS_ENABLED=false
GF_SECURITY_ALLOW_EMBEDDING=false
GF_SECURITY_COOKIE_SECURE=true

# Grafana SMTP 설정
GF_SMTP_ENABLED=false
GF_SMTP_HOST=smtp.gmail.com:587
GF_SMTP_USER=your-email@gmail.com
GF_SMTP_PASSWORD=your-app-specific-password

# Prometheus 설정
PROMETHEUS_RETENTION_TIME=15d
PROMETHEUS_STORAGE_PATH=/prometheus
PROMETHEUS_WEB_EXTERNAL_URL=https://prometheus.local

# 리소스 제한 설정
GRAFANA_CPU_LIMIT=1
GRAFANA_MEMORY_LIMIT=1G
PROMETHEUS_CPU_LIMIT=1
PROMETHEUS_MEMORY_LIMIT=2G
